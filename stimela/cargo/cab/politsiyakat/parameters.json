{
    "task": "politsiyakat", 
    "base": "stimela/base", 
    "tag": "0.2.5", 
    "description": "Routines for automated post-1GC error detection and mitigation", 
    "prefix": "--", 
    "binary": "python -m politsiyakat", 
    "msdir": "true", 
    "parameters": [
        {
            "info": "Specify which suite to search for the required task", 
            "dtype": "str", 
            "default": "antenna_mod", 
            "name": "tasksuite", 
            "choices": [
                "antenna_mod"
            ]
        }, 
        {
            "info": "name of task to execute", 
            "name": "command", 
            "default": null, 
            "dtype": "str", 
            "required": "true", 
            "mapping": "task"
        }, 
        {
            "info": "Measurement set", 
            "dtype": "file", 
            "default": null, 
            "name": "msname", 
            "io": "msfile"
        }, 
        {
            "info": "Data column in MS", 
            "dtype": "str", 
            "default": "CORRECTED_DATA", 
            "name": "column", 
            "mapping": "data_column"
        }, 
        {
            "info": "Field", 
            "dtype": "str", 
            "default": null, 
            "name": "field", 
            "mapping": "cal_field"
        }, 
        {
            "info": "Valid phase range", 
            "dtype": "str", 
            "default": null, 
            "name": "valid_phase_range"
        }, 
        {
            "info": "percentage of all unflagged data per channel", 
            "dtype": "float", 
            "default": null, 
            "name": "max_invalid_datapoints"
        }, 
        {
            "info": "Output directory", 
            "dtype": "file", 
            "default": null, 
            "name": "output_dir", 
            "io": "output"
        }, 
        {
            "info": "Nrwos to process on each run", 
            "dtype": "int", 
            "default": null, 
            "name": "nrows_chunk"
        }, 
        {
            "info": "simulate", 
            "dtype": "bool", 
            "default": false, 
            "name": "simulate"
        }
    ]
}