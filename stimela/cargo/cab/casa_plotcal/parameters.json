{
    "task": "casa_plotcal", 
    "base": "stimela/casa", 
    "tag": "1.0.1", 
    "description": "An all-purpose plotter for calibration results", 
    "prefix": "-", 
    "binary": "plotcal", 
    "msdir": false, 
    "parameters": [
        {
            "info": "Name of input calibration table", 
            "dtype": "file", 
            "required": true, 
            "name": "caltable", 
            "io": "input"
        }, 
        {
            "info": "Value to plot along x axis (time,chan,freq,antenna,antenna1,antenna2,scan,amp,phase,real,imag,snr,tsys,delay,spgain)", 
            "dtype": "str", 
            "default": null, 
            "name": "xaxis", 
            "choices": [
                "time", 
                "chan", 
                "freq", 
                "antenna", 
                "antenna1", 
                "antenna2", 
                "scan", 
                "amp", 
                "phase", 
                "real", 
                "imag", 
                "snr", 
                "tsys", 
                "delay", 
                "spgain"
            ]
        }, 
        {
            "info": "Value to plot along y axis (time,chan,freq,antenna,antenna1,antenna2,scan,amp,phase,real,imag,snr,tsys,delay,spgain)", 
            "dtype": "str", 
            "default": null, 
            "name": "yaxis", 
            "choices": [
                "time", 
                "chan", 
                "freq", 
                "antenna", 
                "antenna1", 
                "antenna2", 
                "scan", 
                "amp", 
                "phase", 
                "real", 
                "imag", 
                "snr", 
                "tsys", 
                "delay", 
                "spgain"
            ]
        }, 
        {
            "info": "Antenna polarization to plot (RL,R,L,XY,X,Y,/)", 
            "dtype": "str", 
            "default": null, 
            "name": "poln", 
            "choices": [
                "RL", 
                "R", 
                "L", 
                "XY", 
                "X", 
                "Y", 
                "/"
            ]
        }, 
        {
            "info": "field names or index of calibrators: ''==>all", 
            "dtype": "str", 
            "default": null, 
            "name": "field"
        }, 
        {
            "info": "antenna/baselines: ''==>all, antenna = '3,VA04'", 
            "dtype": "str", 
            "default": null, 
            "name": "antenna"
        }, 
        {
            "info": "spectral window:channels: ''==>all, spw='1:5~57'", 
            "dtype": "str", 
            "default": null, 
            "name": "spw"
        }, 
        {
            "info": "time range: ''==>all", 
            "dtype": "str", 
            "default": null, 
            "name": "timerange"
        }, 
        {
            "info": "Panel number on display screen (yxn)", 
            "dtype": "int", 
            "default": null, 
            "name": "subplot"
        }, 
        {
            "info": "Overplot solutions on existing display", 
            "dtype": "bool", 
            "default": false, 
            "name": "overplot"
        }, 
        {
            "info": "Specify if old plots are cleared or not (ignore)", 
            "dtype": "str", 
            "default": null, 
            "name": "clearpanel"
        }, 
        {
            "info": "Iterate plots on antenna,time,spw,field", 
            "dtype": "str", 
            "default": null, 
            "name": "iteration"
        }, 
        {
            "info": "plot axes ranges: [xmin,xmax,ymin,ymax]", 
            "dtype": "list:float", 
            "default": null, 
            "name": "plotrange"
        }, 
        {
            "info": "If true, show flagged solutions", 
            "dtype": "bool", 
            "default": false, 
            "name": "showflags"
        }, 
        {
            "info": "pylab plot symbol", 
            "dtype": "str", 
            "default": "o", 
            "name": "plotsymbol"
        }, 
        {
            "info": "initial plotting color", 
            "dtype": "str", 
            "default": "blue", 
            "name": "plotcolor"
        }, 
        {
            "info": "Size of plotted marks", 
            "dtype": "float", 
            "default": 5.0, 
            "name": "markersize"
        }, 
        {
            "info": "Font size for labels", 
            "dtype": "float", 
            "default": 10.0, 
            "name": "fontsize"
        }, 
        {
            "info": "''= no plot hardcopy, otherwise supply name", 
            "dtype": "file", 
            "default": null, 
            "name": "figfile", 
            "io": "output"
        }, 
        {
            "info": "Show plot on gui", 
            "dtype": "bool", 
            "default": false, 
            "name": "showgui"
        }
    ]
}