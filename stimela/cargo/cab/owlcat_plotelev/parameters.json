{
    "task": "owlcat_plotelev",
    "base": "stimela/owlcat",
    "tag": "1.2.5-1",
    "version" : "1.6.2",
    "description": "Plots elevation tracks from an measurement set",
    "prefix": "--",
    "binary": "plot-elevation-tracks.py",
    "msdir": true,
    "parameters": [
        {
            "info": "Name of Measurement set",
            "name": "msname",
            "io": "msfile",
            "default": null,
            "dtype": "file",
            "required": true
        }, 
        {
            "info": "lists fields found in MS, then exits",
            "dtype": "bool",
            "default": null,
            "name": "list"
        }, 
        {
            "info": "Output filename",
            "io": "output",
            "dtype": "file",
            "default": "lst-elev.png",
            "name": "output-name"
        },
        {
            "info": "Display plot on screen",
            "dtype": "bool",
            "default": false,
            "name": "display"
        }
    ]
}
