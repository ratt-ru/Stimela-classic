{
    "task": "specfit", 
    "base": "stimela/tigger", 
    "tag": "0.3.2", 
    "description": "Tools for continuum spectral fitting. Only fits spectral indices", 
    "prefix": "", 
    "binary": "python", 
    "msdir": false, 
    "parameters": [
        {
            "info": "Image to exctract SPIs from. Must have a frequency axis with more than one plane.", 
            "dtype": "file", 
            "default": null, 
            "name": "image", 
            "io": "input"
        }, 
        {
            "info": "Output SPI image", 
            "dtype": "file", 
            "default": null, 
            "name": "output-spi-image", 
            "io": "output"
        }, 
        {
            "info": "Output SPI image", 
            "dtype": "file", 
            "default": null, 
            "name": "output-spi-error-image", 
            "io": "output"
        }, 
        {
            "info": "Input SPI image", 
            "dtype": "file", 
            "default": null, 
            "name": "input-spi-image", 
            "io": "input"
        }, 
        {
            "info": "Input SPI image", 
            "dtype": "file", 
            "default": null, 
            "name": "input-spi-error-image", 
            "io": "input"
        }, 
        {
            "info": "Mask image", 
            "dtype": "file", 
            "default": null, 
            "name": "mask-image", 
            "io": "input"
        }, 
        {
            "info": "Input sky model", 
            "dtype": "file", 
            "default": null, 
            "name": "input-skymodel", 
            "io": "input"
        }, 
        {
            "info": "Output sky model", 
            "dtype": "file", 
            "default": null, 
            "name": "output-skymodel", 
            "io": "output"
        }, 
        {
            "info": "Sigma level", 
            "dtype": "float", 
            "default": 20, 
            "name": "sigma-level"
        }, 
        {
            "info": "SPI reference frequency in Hz", 
            "dtype": "float", 
            "default": null, 
            "name": "freq0"
        }, 
        {
            "info": "SPI values outside this range will be set to zero", 
            "dtype": "list:float", 
            "default": [
                -10, 
                10
            ], 
            "name": "tolerance-range"
        }
    ]
}